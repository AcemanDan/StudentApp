@page
@model Student.Pages.Students.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Student</h1>

<div>
    <h4>Details</h4>
    <hr />
    <form>
        
        <div class="form-group row">
            <label asp-for="StudentList.FirstName" class="col-sm-2 col-form-label">First Name:</label>
            <div class="col-sm-10">
                <p>@Model.StudentList.FirstName</p>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="StudentList.LastName" class="col-sm-2 col-form-label">Last Name:</label>
            <div class="col-sm-10">
                <p>@Model.StudentList.LastName</p>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="StudentList.Id" class="col-sm-2 col-form-label">Student ID:</label>
            <div class="col-sm-10">
                <p>@Model.StudentList.Id</p>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="StudentList.GradeLevel" class="col-sm-2 col-form-label">Level:</label>
            <div class="col-sm-10">
                <p>@Model.StudentList.GradeLevel</p>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="StudentList.Room" class="col-sm-2 col-form-label">Home Room:</label>
            <div class="col-sm-10">
                <p>@Model.StudentList.Room</p>
            </div>
        </div>
    </form>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.StudentList.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
