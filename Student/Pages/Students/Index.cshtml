@page
@model Student.Pages.Students.IndexModel

@{
    ViewData["Title"] = "Student List";
}

<h1>Student List</h1>

<p>
    <a asp-page="Create" class="lead btn btn-primary">New Student</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudentList[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentList[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentList[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentList[0].GradeLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentList[0].Room)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.StudentList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GradeLevel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Room)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
