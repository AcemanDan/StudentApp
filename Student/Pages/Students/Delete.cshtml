@page
@model Student.Pages.Students.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h4>Are you sure you want to delete this student?</h4>
<div>
    <h4>@Model.StudentList.FirstName @Model.StudentList.LastName?</h4>
    <hr />
    
    
    <form method="post">
        <input type="hidden" asp-for="StudentList.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
